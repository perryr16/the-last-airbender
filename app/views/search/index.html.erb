<h1>Members of the <%=@characters.first.affiliation %></h1>
<p>Count: <%=@characters.length  %></p>
<%@characters.each do |character| %>
  <section class="character">
    <h3 class="name"><%=character.name %></h3>
    <img class="character-image" src="<%= character.photo_url %>" alt="<%= character.name %> image"> <p>
    <p class="allies">Allies: <%=character.allies_list %></p>
    <p class="enemies">Enemies: <%=character.enemies_list %></p>
    <p class="affiliation">Affiliation: <%=character.affiliation %></p>
  </section>
  
<%end %>